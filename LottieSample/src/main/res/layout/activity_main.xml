<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDDACE">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/singer_shoes_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:duplicateParentState="true"
        android:scaleType="centerInside"/>

    <FrameLayout
        android:id="@+id/body_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/singer_left_arm_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:scaleType="centerInside"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/singer_right_arm_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:scaleType="centerInside"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/singer_torso_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:scaleType="centerInside"/>

        <FrameLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/singer_under_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:scaleType="centerInside"/>

            <View
                android:id="@+id/eyebrow"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="#FC9B9B"
                android:visibility="gone"/>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/singer_upper_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:scaleType="centerInside"/>

        </FrameLayout>

    </FrameLayout>

    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="50dp">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:splitTrack="false"
            app:seekBarRotation="CW270"/> <!-- Rotation: CW90 or CW270 -->
    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
</FrameLayout>

